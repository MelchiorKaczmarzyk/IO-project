@using IOProject.Models
@using IOProject.ViewModels
@model ApplicationViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Send an Application!</h1>
<hr />
<form id="form" method="post" role="form" enctype="multipart/form-data" asp-controller="Applications" asp-action="Create" asp-route-ProjectID="@ViewBag.ProjectID">
    <div class="form-group-row">
        <label class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <label class="custom-file-label">Attachments </label>
            <span asp-validation-for="Attachments" class="text-danger"></span>
            <input multiple asp-for="Attachments" class="form-control custom-file-input" />
            <br />
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-lg btn-primary" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
